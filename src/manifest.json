{
  "manifest_version": 3,
  "name": "YouTube ClickBait Filter",
  "version": "1.0.0",
  "description": "Intelligently filters clickbait, negative, and crisis-related content from YouTube for a cleaner viewing experience.",
  "author": "Rory Glenn",
  "homepage_url": "https://github.com/RoryGlenn/YoutubeClickBaitFilter",

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "storage",
    "activeTab"
  ],

  "host_permissions": [
    "*://www.youtube.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["filter.bundle.js"],
      "run_at": "document_idle"
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "YouTube ClickBait Filter",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}
